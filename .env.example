# ==============================================
# FastAPI Async Learning - Environment Variables
# ==============================================
# Copy this file to .env and update with your values
# cp .env.example .env

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# SQLite (Development) - Simple file-based database
DATABASE_URL=sqlite+aiosqlite:///./test.db

# PostgreSQL (Production) - Uncomment and configure for production use
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/dbname
# Example: DATABASE_URL=postgresql+asyncpg://postgres:secret@localhost:5432/fastapi_db

# Log all SQL queries (useful for debugging, set to false in production)
DATABASE_ECHO=false

# ==============================================
# APPLICATION SETTINGS
# ==============================================

APP_NAME=Learning Async Python with FastAPI
APP_VERSION=1.0.0

# Enable debug mode (set to false in production)
DEBUG=true

# ==============================================
# SERVER CONFIGURATION
# ==============================================

HOST=0.0.0.0
PORT=8000

# Auto-reload on code changes (development only)
RELOAD=true

# ==============================================
# API CONFIGURATION
# ==============================================

API_PREFIX=/api

# ==============================================
# EXTERNAL API SETTINGS
# ==============================================

# Timeout for external HTTP requests (in seconds)
EXTERNAL_API_TIMEOUT=10